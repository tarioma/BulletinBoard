            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Обновляет информацию о пользователе.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Идентификатор пользователя.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Имя пользователя.",
                    "type": "string",
                    "maxLength": 100
                  },
                  "is_admin": {
                    "description": "Является ли пользователь администратором.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "name",
                  "is_admin"
                ]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Информация успешно обновлена."
          },
          "400": {
            "description": "Параметры запроса переданы неверно.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Пользователь не найден.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Users"
        ],
        "summary": "Удаляет пользователя.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Идентификатор пользователя.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Пользователь успешно удалён."
          },
          "400": {
            "description": "Параметры запроса переданы неверно.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Пользователь не найден.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/bulletins": {
