          },
          "name": {
            "type": "string",
            "description": "Имя пользователя."
          },
          "is_admin": {
            "type": "boolean",
            "description": "Является ли пользователь администратором."
          },
          "created_utc": {
            "type": "string",
            "format": "date-time",
            "description": "Дата и время создания пользователя."
          }
        }
      },
      "BulletinId": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Идентификатор объявления."
          }
        }
      },
      "Bulletin": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid",
            "description": "Идентификатор объявления."
          },
          "number": {
            "type": "integer",
            "description": "Порядковый номер объявления."
          },
          "text": {
            "type": "string",
            "description": "Текст объявления."
          },
          "rating": {
            "type": "integer",
            "description": "Рейтинг объявления."
          },
          "created_utc": {
            "type": "string",
            "format": "date-time",
            "description": "Дата и время создания объявления."
          },
          "expiry_utc": {
            "type": "string",
            "format": "date-time",
            "description": "Дата и время истечения объявления."
          },
          "user_id": {
            "type": "string",
            "format": "uuid",
            "description": "Идентификатор пользователя - автора объявления."
          },
          "image_preview": {
            "type": "string",
            "nullable": true,
            "description": "Ссылка на превью изображения."
