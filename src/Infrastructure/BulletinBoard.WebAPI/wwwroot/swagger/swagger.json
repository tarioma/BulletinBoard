{
  "openapi": "3.0.3",
  "info": {
    "title": "Доска объявлений",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:5129/api/"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Создаёт нового пользователя.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Имя пользователя.",
                    "type": "string",
                    "maxLength": 100
                  },
                  "is_admin": {
                    "description": "Является ли пользователь администратором.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "name",
                  "is_admin"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Пользователь успешно создан.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserId"
                }
              }
            }
          },
          "400": {
            "description": "Параметры запроса переданы неверно.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Позволяет искать по списку пользователей.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Номер страницы.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "count",
            "in": "query",
            "description": "Количество результатов поиска, которое необходимо вернуть.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "searchName",
            "in": "query",
            "description": "Поисковый запрос по имени пользователя.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "searchIsAdmin",
            "in": "query",
            "description": "Если true, то будут выведены пользователи со статусом is_admin = true.",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "description": "Задаёт порядок сортировки.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "created",
                "name",
                "is_admin"
              ],
              "default": "created"
            }
          },
          {
            "name": "desc",
            "in": "query",
            "description": "При передаче true значения будут возвращены в обратном порядке.",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "createdFrom",
            "in": "query",
            "description": "Вернёт пользователей, добавленных не раньше указанной даты.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "yyyy-MM-ddThh:mm+hh:mm"
            }
          },
          {
            "name": "createdTo",
            "in": "query",
            "description": "Вернёт пользователей, добавленных не позже указанной даты.",
            "required": false,
            "schema": {
              "type": "string",
              "format": "yyyy-MM-ddThh:mm+hh:mm"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Успешный ответ.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Параметры запроса переданы неверно.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
